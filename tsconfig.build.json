{
    "compilerOptions": {
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "build",
        "allowJs": true,
        "target": "es6",
        "module": "commonjs",
        "sourceMap": false,
        "baseUrl": ".",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "resolveJsonModule": true,
        "types": [
            "node"
        ],
        "paths": {
            "src/*": ["src/*"],
        }
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "build",
    ]
}
